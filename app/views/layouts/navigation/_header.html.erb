<header class="main-header">
  <a class="logo" href="/">GO-JEK</a>
  <nav class="navbar navbar-static-top" role="navigation">
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        
        <li class="dropdown notifications-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-bell-o">
            </i><span class="label label-warning">10</span>
          </a>
          <ul class="dropdown-menu">
            <li class="header">
              You have 10 notifications
            </li>
            <li>
              <ul class="menu">
                <li>
                  <a href="#">
                <i class="ion ion-ios-people info">
                </i>Notification title
                </a>
                </li>
              </ul>
            </li>
            <li class="footer">
              <a href="#"> View all</a>
            </li>
          </ul>
        </li>
        
        <li class="dropdown user user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <img alt="User Image" class="user-image" src="http://placehold.it/160x160" />
          <span class="hidden-xs"><%= "#{@current_user.full_name}" %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header">
              <img class="img-circle" alt="User Image" src="http://placehold.it/160x160"> </img>
              <p>
                <%= "#{@current_user.full_name}" %>
                <small><%= "Member since #{@current_user.joined_at}" %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <a class="btn btn-default btn-flat" href="#"> 
                  <%= link_to 'Profile', user_path %>
                </a>
              </div>
              <div class="pull-right">
                <a class="btn btn-default btn-flat" href="#">
                  <%= link_to 'Sign out', logout_path, method: :delete %>
                </a>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>