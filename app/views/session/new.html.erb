<% if flash[:alert] %>
  <div class="alert alert-warning mid-text"><p id='notice'><%= flash[:alert] %></p></div>
<% end %>
<% if notice %>
  <div class="alert alert-info mid-text"><p id='notice'><%= notice %></p></div>
<% end %>

<div class="login-box">
  <div class="login-logo">
    <b>GO-JEK</b>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session DRIVER</p>

    <%= form_tag({}, class:"form-horizontal") do %>
      <div class="form-group has-feedback">
        <%= text_field_tag :login, params[:login], class: 'form-control', placeholder:'phone' %>
        <span class="glyphicon glyphicon-phone form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= password_field_tag :password, params[:password], class: 'form-control', placeholder:'password' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= submit_tag('Sign In', class: "btn btn-primary btn-block btn-flat") %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>

    <div class="social-auth-links text-center">
      <p>- OR -</p>
      <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using
        Facebook</a>
      <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using
        Google+</a>
    </div>
    <!-- /.social-auth-links -->

    <%= link_to 'Register new membership', new_user_path %>

  </div>
  <!-- /.login-box-body -->
</div>
